- title 'Change your password'

- slogan(quotation_generator("Treat your password like your toothbrush. Don't let anybody else use it, and get a new one every six months.", :author => "Clifford Stroll"))

= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :reset_password_token, :as => :hidden
    = f.input :password, :label => "New password"
    = f.input :password_confirmation, :label => "Confirm new password"
  = f.buttons do
    = f.commit_button "Change my password"

= render :partial => "devise/shared/links"